{% trans_default_domain 'FOSUserBundle' %}
{% extends "@FOSUser/layout.html.twig" %}


{% block body %}
<body id="page-top">
<header class="masthead">
    <div class="container">
            <div class="row">
                <div class="register-container">
                    <h2 class="hregister">Pas encore de compte ?</h2>
                    <h4 class="hregister">A vous de jouer !</h4>
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    {{ form_widget(form) }}
                    <img width="200" id="previewPictureProfil" src="#" alt="">
                    <div>
                        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-xl text-uppercase btn-header"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
    </div>
</header>

{% endblock body %}


