{% extends 'base.html.twig' %}


{% block body %}
<!-- Contact -->
<section id="contact">
    <div class="container">
        <div class="row row-about-contact">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Nous contacter</h2>
                <h3 class="section-subheading text-muted">L'Equipe OzOut adore être invitée à tout plein d'événements, surtout si c'est sur un rooftop :)</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="name" type="text" placeholder="Ton nom / prénom *" required data-validation-required-message="Tu n'as pas de nom ?.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" type="email" placeholder="Ton adresse e-mail *" required data-validation-required-message="Tu n'as pas d'adresse e-mail ?">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="phone" type="tel" placeholder="Ton numéro de téléphone *" required data-validation-required-message="Tu n'as pas de 06 ?">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" id="message" placeholder="Ton message *" required data-validation-required-message="Tu n'as pas de message pour nous ?"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Envoyer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

{% endblock %}
