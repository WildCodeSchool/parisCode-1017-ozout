{% extends 'base.html.twig' %}

{% block body %}
<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Créé ton événement !</div>
            <div class="intro-heading text-uppercase">Tout simplement. </div>
            <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">En savoir plus</a>
        </div>
    </div>
</header>

<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading text-uppercase" align="center">Top des événements en cours</h2>
                {% if app.user == null %}
                    <div align="center">
                        <h3 align="center" class="section-subheading text-muted h3Home">Connecte toi pour voir les événements privés de tes ami.e.s.</h3>
                        <a class="btn btn-primary btn-lg text-uppercase js-scroll-trigger btn-header btnconnectHome" href="{{ path('fos_user_security_login') }}">Se connecter</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
                {% for event in events %}
                {% if event.isPrivate == false and event.start|date('m/d/y') > 'now'|date('m/d/y') %}
                    <div class="col-md-4 col-sm-6 portfolio-item thumb-post">
                        <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1{{ event.id }}">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="{{ asset('uploads/pictures/'~ event.picture.namePicture) }}" alt="{{ event.title }}">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ event.title }}</h4>
                            <p class="text-muted">{{ event.city }} </p>
                            <p class="text-muted">{{ event.zipcode }} </p>
                        </div>
                    </div>

                {% endif %}
                {% endfor %}
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Événements privés en cours</h2>
            </div>
        </div>
        <div class="row">
            {% for event in events %}
                {% if event.start|date('m/d/y') > 'now'|date('m/d/y') %}
                    <div class="col-md-4 col-sm-6 portfolio-item thumb-post">
                        <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1{{ event.id }}">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="{{ asset('uploads/pictures/'~ event.picture.namePicture) }}"
                                 alt="{{ event.title }}">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ event.title }}</h4>
                            <p class="text-muted">{{ event.city }} </p>
                            <p class="text-muted">{{ event.targetMoney }} </p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% endif %}
        </div>
    </div>

</section>

<!-- About OzOut -->
<section id="services">
    <div class="container">
        <div class="row aboutHome">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase h2apropos">À propos d'Ozout</h2>
            </div>
        </div>
            {#<video id="video" playsinline="" autoplay muted loop class="bgvid">#}
                {#<source src="http://www.loisjeans.com/web2013/img/home/lois-SS2013-background-02.mp4#}
        {#" type="video/mp4">#}
            {#</video>#}
            {#</div>#}
        <div class="text-center">
            <video id="video" playsinline="" autoplay muted loop class="bgvid">#}
                <source src="http://www.loisjeans.com/web2013/img/home/lois-SS2013-background-02.mp4
                " type="video/mp4">
                </video>
            {#<iframe width="950" height="450" src="https://www.youtube.com/embed/zEv-cuSt0uM" frameborder="3" allow="autoplay; encrypted-media" allowfullscreen></iframe>#}
        </div>
        <div class="row text-center step">
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                  <i class="fa fa-circle fa-stack-2x text-primary"></i>
                  <i class="fa fa-user-circle fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Je m'inscris</h4>
                <p class="text-muted">En créant mon compte j'accède à tous les évènements</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                  <i class="fa fa-circle fa-stack-2x text-primary"></i>
                  <i class="fa fa-plus-circle fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Je crée mon évènement</h4>
                <p class="text-muted">Je décide où, quand, comment, combien... et avec qui !</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                  <i class="fa fa-circle fa-stack-2x text-primary"></i>
                  <i class="fa fa-users fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Je profite avec mes ami.e.s</h4>
                <p class="text-muted">Tout ça en quelques clics !</p>
            </div>
        </div>
    </div>
</section>

<!-- Avis -->
<section class="bg-light" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Recommandations</h2>
            </div>
        </div>
        <div class="row text-center">
            {% for review in reviews if review.score >= 3 %}
            <div class="col-md-4">
                <img class="userreview" src="{{ asset('uploads/pictures/'~ review.user.picture.namePicture) }}" style="width: 100px;height:100px;">
                <h4 class="review-heading">{{ review.user.username }}</h4>
                <p class="starHome" align="center">
                    {% if review.score == 4 %}
                        <span data-score="5">★</span><span data-score="4">★</span><span class="active" data-score="3">★</span><span data-score="2">★</span>
                    {% elseif review.score == 5 %}
                        <span data-score="5">★</span><span data-score="4">★</span><span class="active" data-score="3">★</span><span data-score="2">★</span><span data-score="1">★</span>
                    {% else %}
                        <span data-score="5">★</span><span data-score="4">★</span><span class="active" data-score="3">★</span>
                    {% endif %}
                </p>
                <p class="text-muted">{{ review.comment }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Modal Event/Description-->
{% for event in events %}
<div class="portfolio-modal modal fade" id="portfolioModal1{{ event.id }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="modal-body">
                            <h2 class="text-uppercase">{{ event.title }}</h2>
                            <img src="{{ asset('uploads/pictures/'~ event.picture.namePicture) }}" alt="eventimg">
                            <p>{{ event.eventDescription }} <br>
                                Le {{ event.start|date('d/m/Y, h:i') }}<br>
                                Adresse :<br>
                                {{ event.adress }}, {{ event.zipcode }} {{ event.city }}<br>
                                La cagnotte à atteindre est de : {{ event.targetMoney ~ '€' }}
                                avant le {{ event.deadline|date ("d/m/Y")}}<br>
                                Maximum d'invités : {{ event.maxPeople }}<br>
                                Cagnotte en cours : {{ event.onGoingMoney ~ '€' }}
                            </p>

                            {% if event.nbPeopleParticipate >= event.maxPeople %}
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    Evènement complet</button>
                            {% elseif event.userParticipate is defined %}
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    Vous participez déjà à l'évènement</button>
                            {% else %}
                                <a href="{{ path('reservation_create', {'id': event.id}) }}"
                                   class="btn btn-primary">S'inscrire à l'évènement</a>
                            {% endif %}
                            <button class="btn btn-primary" data-dismiss="modal" type="button">
                                <i class="fa fa-times"></i>
                                Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}
{% block javascripts %}
    <!-- Custom scripts for this template -->
    <script src="{{ asset('assets/js/review.js') }}"></script>
{% endblock %}
