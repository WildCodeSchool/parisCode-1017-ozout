{% extends 'base.html.twig' %}

{% block body %}
<body id="page-top">
<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Créé ton événement !</div>
            <div class="intro-heading text-uppercase">Tout simplement. </div>
            <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">En savoir plus</a>
        </div>
    </div>
</header>

<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading text-uppercase" align="center">Top des événements en cours</h2>
                {% if app.user == null %}
                    <h3 class="section-subheading text-muted">Connecte toi pour voir les événements privés de tes ami.e.s.</h3>
                    <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger btn-header" href="{{ path('fos_user_security_login') }}">Se connecter</a>
                {% endif %}
            </div>
        </div>
        <div class="row">
                {% for event in events %}
                    <div class="col-md-4 col-sm-6 portfolio-item thumb-post">
                        <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1{{ event.id }}">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="{{ asset('uploads/pictures/'~ event.picture.namePicture) }}" alt="{{ event.title }}">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ event.title }}</h4>
                            <p class="text-muted">{{ event.city }} </p>
                            <p class="text-muted">{{ event.targetMoney }} </p>
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>

</section>

<!-- About OzOut -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">À propos d'Ozout</h2>
                {#<h3 class="section-subheading text-muted">Vidéo Gif à fournir.</h3>#}
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
            </span>
                <h4 class="service-heading">Facile</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
            <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
            </span>
                <h4 class="service-heading">Rapide</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
            <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
            </span>
                <h4 class="service-heading">Intelligent</h4>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
            </div>
        </div>
    </div>
</section>

<!-- Avis -->
<section class="bg-light" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Les avis des utilisateurs d'OzOut</h2>
            </div>
        </div>
        <div class="row">
            {% set first = reviews[1] %}
            {% set second = reviews[2] %}
            {% set third = reviews[3] %}
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="" alt="">
                        <h4>{{ first.user }}</h4>
                        <p class="text-muted">{{ first.comment }}</p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="" alt="">
                        <h4>{{ second.user }}</h4>
                        <p class="text-muted">{{ second.comment }}</p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="" alt="">
                        <h4>{{ third.user }}</h4>
                        <p class="text-muted">{{ third.comment }}</p>
                    </div>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
        </div>
    </div>
</section>

<!-- Modal Event/Description-->
{% for event in events %}
<div class="portfolio-modal modal fade" id="portfolioModal1{{ event.id }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="modal-body">
                            <h2 class="text-uppercase">{{ event.title }}</h2>
                            <a class="item-intro text-muted"></a>
                            <p>{{ event.eventDescription }}</p>
                            <p>{{ event.deadline|date ("d/m/Y")}}</p>
                            <p>{{ event.city }}</p>
                            <img src="{{ asset('uploads/pictures/'~ event.picture.namePicture) }}" alt="eventimg">
                            <button class="btn btn-primary" data-dismiss="modal" type="button">
                                <i class="fa fa-times"></i>
                                Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}
